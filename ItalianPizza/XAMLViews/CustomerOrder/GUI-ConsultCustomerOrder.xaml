                    </TransformGroup>
                </GridSplitter.RenderTransform>
            </GridSplitter>

            <Label Content="Nombre Producto" 
               HorizontalAlignment="Left" 
               Margin="1208,323,0,0" 
               VerticalAlignment="Top" 
