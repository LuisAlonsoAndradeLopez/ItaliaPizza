            <Label Content="Selecione Fecha: " 
               HorizontalAlignment="Left" 
               Margin="317,101,0,0" 
               VerticalAlignment="Top" 
               Foreground="White" 
               FontSize="19" 
               FontFamily="Arial" FontWeight="Bold"/>

            <Label Content="Selecione Estatus: " 
               HorizontalAlignment="Left" 
               Margin="312,157,0,0" 
               VerticalAlignment="Top" 
               Foreground="White" 
               FontSize="19" 
               FontFamily="Arial" 
               RenderTransformOrigin="0.54,0.632" FontWeight="Bold"/>

            <DatePicker x:Name="dpOrderDateFilter" 
                    HorizontalAlignment="Left" 
                    Margin="485,99,0,0" 
                    VerticalAlignment="Top" 
                    Height="35" 
                    Width="242" 
                    FontSize="20" 
                    Background="#FF18171C" 
                    BorderBrush="#FF18171C" 
                    SelectedDateChanged="DatePicker_OrderDateSelection" />

            <TextBox x:Name="txtDatePicker" 
                     Style="{StaticResource RoundCornerTextBoxStyle}"
                     HorizontalAlignment="Left" 
                     Margin="487,99,0,0" 
                     TextWrapping="Wrap" 
                     Text="" 
                     VerticalAlignment="Top" 
                     Width="212" 
                     Height="38" 
                     Background="#FF181818" 
                     Foreground="White" 
                     BorderBrush="#FF6C6969" 
                     FontSize="20" 
                     FontWeight="Bold"
