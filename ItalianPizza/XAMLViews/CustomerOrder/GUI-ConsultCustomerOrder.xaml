            <ListBox x:Name="lboStatusCustomerOrders"
                
                HorizontalAlignment="Left" 
                Margin="494,155,0,0" 
                VerticalAlignment="Top" 
                FontSize="20" 
                Width="239" 
                Height="36" 
                Background="#FF18171C" 
                Foreground="#FFFFFDFD"
