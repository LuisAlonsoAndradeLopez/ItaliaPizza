                Margin="1438,823,0,0" 
                VerticalAlignment="Top"
                Height="44"
                Width="206"
                Background="#FFDB4B2C"
                Foreground="#FFF8F8F8"
                FontFamily="Arial" 
                FontSize="18" 
                BorderBrush="#FFBC8B21" 
                BorderThickness="0"
                FontWeight="Thin" 
                Click="GoToModifyOrderVirtualWindow"/>
