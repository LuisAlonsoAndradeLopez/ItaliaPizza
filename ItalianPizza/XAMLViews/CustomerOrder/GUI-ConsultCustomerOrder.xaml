        <Grid x:Name="grdVirtualWindowsCustomerOrderDetails" Margin="-2,0,2,0">
            <Label Content="Contenido del pedido" 
               HorizontalAlignment="Left" 
               Margin="1351,284,0,0" 
               VerticalAlignment="Top" 
               Background="{x:Null}" 
               Foreground="#FFDB4B2C" 
               FontFamily="Tahoma" 
               FontSize="20" 
               FontWeight="Bold"/>

            <GridSplitter HorizontalAlignment="Left" Height="524" Margin="1446,64,0,0" VerticalAlignment="Top" Width="1" RenderTransformOrigin="0.5,0.5">
                <GridSplitter.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="89.954"/>
