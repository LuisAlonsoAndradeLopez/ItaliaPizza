            <Label Content="Nombre del pedido " 
               HorizontalAlignment="Left" 
               Margin="373,232,0,0" 
               VerticalAlignment="Top" 
               Foreground="White" 
               FontSize="16" 
               FontFamily="Arial Black" 
               RenderTransformOrigin="0.54,0.632"/>

            <Label Content="Fecha Registro " 
               HorizontalAlignment="Left" 
               Margin="586,232,0,0" 
               VerticalAlignment="Top" 
               Foreground="White" 
               FontSize="16" 
               FontFamily="Arial Black" 
               RenderTransformOrigin="0.54,0.632"/>

            <Label Content="Hora Registro" 
               HorizontalAlignment="Left" 
               Margin="772,232,0,0" 
               VerticalAlignment="Top" 
               Foreground="White" 
               FontSize="16" 
               FontFamily="Arial Black" 
               RenderTransformOrigin="0.54,0.632"/>

            <Label Content="Estatus del pedido" 
               HorizontalAlignment="Left" 
               Margin="941,232,0,0" 
               VerticalAlignment="Top" 
               Foreground="White" 
               FontSize="16" 
               FontFamily="Arial Black" 
               RenderTransformOrigin="0.54,0.632"/>

            <WrapPanel x:Name="wpCustomerOrders" Margin="276,281,534,53">
