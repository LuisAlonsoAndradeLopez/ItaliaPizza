            <Button Content="Realizar corte de hoy" 
                HorizontalAlignment="Left" 
                Margin="826,138,0,0" 
                VerticalAlignment="Top" 
                Height="47" Width="230" 
                Background="#FF161618" 
                Foreground="White" 
                FontFamily="Arial" 
                FontSize="14" 
                BorderThickness="3" 
                FontWeight="Thin" 
                BorderBrush="#FFDB4B2C"/>

            <Button Content="Agregar Nuevo Pedido Hoy"
                HorizontalAlignment="Left"
                Margin="826,70,0,0"
                VerticalAlignment="Top" 
                Height="49" Width="230" 
                Background="#FF161618" 
                Foreground="White" 
                FontFamily="Arial" 
                FontSize="14" 
                BorderBrush="#FFDB4B2C" 
                FontWeight="Thin" 
