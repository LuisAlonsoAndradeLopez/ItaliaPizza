               Stretch="UniformToFill"/>

            <Image HorizontalAlignment="Left" 
               Height="44" 
               Margin="344,177,0,0" 
               VerticalAlignment="Top"
               Width="49" 
               Source="\Resources\Pictures\ICON-ID.png" 
               Stretch="UniformToFill"/>

            <Image HorizontalAlignment="Left" 
               Height="44" 
               Margin="47,297,0,0" 
               VerticalAlignment="Top" 
               Width="49" 
               Source="\Resources\Pictures\ICON-ID.png" 
               Stretch="UniformToFill"/>

            <Image HorizontalAlignment="Left" 
               Height="40" 
               Margin="344,297,0,0" 
               VerticalAlignment="Top" 
               Width="40" 
               Source="\Resources\Pictures\ICON-Numero.png" 
               Stretch="UniformToFill" RenderTransformOrigin="6.054,-2.098"/>

            <Label Content="Calle*" 
               HorizontalAlignment="Left" 
               Margin="391,419,0,0" 
               VerticalAlignment="Top"
               FontFamily="Arial" 
               FontSize="18"
               Foreground="#FFF8F8F8"/>

            <Label Content="Ciudad:" 
                HorizontalAlignment="Left" 
                Margin="95,539,0,0"
                VerticalAlignment="Top"
                FontFamily="Arial"
                FontSize="18"
                Foreground="White"/>

            <TextBox HorizontalAlignment="Left" 
                 Margin="48,457,0,0" 
                 TextWrapping="Wrap" 
                 Text="" 
                 VerticalAlignment="Top"
                 Width="252"
                 FontFamily="Arial" 
                 FontSize="23"
                 Height="44"/>

