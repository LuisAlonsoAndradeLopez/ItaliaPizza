        <Grid x:Name="grdDeliverymanForm" Visibility="Hidden">

            <Label Content="Nombre(s)*" 
               HorizontalAlignment="Left" 
               Margin="101,187,0,0" 
               VerticalAlignment="Top" 
               FontFamily="Arial" 
