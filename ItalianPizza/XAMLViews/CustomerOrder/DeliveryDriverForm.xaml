               Foreground="White"/>


            <TextBox HorizontalAlignment="Left" 
                 Margin="47,349,0,0" 
                 TextWrapping="Wrap" 
                 Text="" 
                 VerticalAlignment="Top"
                 Width="253" 
                 FontFamily="Arial"
                 FontSize="23"
                 Height="42"/>

            <Label Content="Numero Telefonico"
               HorizontalAlignment="Left" 
               Margin="391,305,0,0"
               VerticalAlignment="Top"
               FontFamily="Arial"
               FontSize="18"
               Foreground="#FFF8F8F8"/>

            <TextBox HorizontalAlignment="Left"
                 Margin="344,349,0,0"
                 TextWrapping="Wrap"
                 Text="" 
                 VerticalAlignment="Top" 
                 Width="252" 
                 FontFamily="Arial" 
                 FontSize="23" 
                 Height="42"/>

            <Image HorizontalAlignment="Left" 
               Height="44" 
               Margin="47,177,0,0"
               VerticalAlignment="Top"
               Width="49" 
