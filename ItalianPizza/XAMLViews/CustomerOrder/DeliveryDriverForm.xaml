               Stretch="UniformToFill"/>

            <Image HorizontalAlignment="Left"
               Height="30" 
               Margin="349,539,0,0" 
               VerticalAlignment="Top"
               Width="31" 
               Source="\Resources\Pictures\ICON-NumeroCalle.png" 
               Stretch="UniformToFill"/>

            <Image HorizontalAlignment="Left" 
               Height="30" 
               Margin="53,415,0,0"
               VerticalAlignment="Top" 
               Width="37"
               Source="\Resources\Pictures\ICON-CodigoPostal.png"
