                Height="34" 
                Margin="61,149,0,0" 
                VerticalAlignment="Top"
                Width="33" 
                Source="/Resources/Pictures/ICON-SearchCustomer.png"/>

            <Image
                HorizontalAlignment="Left"
                Height="42" 
                Margin="78,34,0,0" 
                VerticalAlignment="Top"
                Width="42" 
                Source="/Resources/Pictures/ICON-Back.png"
                MouseDown="CloseDeliveryDriverModule_Click"/>

