                Height="38" 
                Margin="55,687,0,0" 
                VerticalAlignment="Top" 
                Width="38" 
                Source="/Resources/Pictures/ICON-Emaiil.png" 
                Stretch="UniformToFill"/>
            <Image HorizontalAlignment="Left"
                Height="30" 
                Margin="351,696,0,0" 
                VerticalAlignment="Top"
                Width="32" 
                Source="/Resources/Pictures/ICON-UserStatus.png" 
                Stretch="UniformToFill"/>
            <Label Content="Estado*" 
                HorizontalAlignment="Left" 
                Margin="97,589,0,0"
                VerticalAlignment="Top"
                FontFamily="Arial"
                FontSize="18"
                Foreground="White"/>
            <Label Content="Colonia*" 
                HorizontalAlignment="Left"
                Margin="393,589,0,0"
                VerticalAlignment="Top"
                FontFamily="Arial" 
                FontSize="18" 
                Foreground="#FFF8F8F8"/>
            <TextBox 
                x:Name="txtState"
                HorizontalAlignment="Left" 
                Margin="51,627,0,0"
                MaxLength="30"
                TextWrapping="Wrap"
                Text="" 
                VerticalAlignment="Top"
                Width="252"
                FontFamily="Arial"
                FontSize="23"
                Height="44"/>
            <TextBox 
                x:Name="txtColony"
                HorizontalAlignment="Left"
                MaxLength="30"
                Margin="345,625,0,0"
                TextWrapping="Wrap"
                Text=""
                VerticalAlignment="Top"
                Width="254"
                FontFamily="Arial"
                FontSize="23"
                Height="46"/>
            <Image HorizontalAlignment="Left" 
                Height="30" 
                Margin="55,588,0,0" 
                VerticalAlignment="Top" 
                Width="38" 
                Source="/Resources/Pictures/ICON-Town.png" 
                Stretch="UniformToFill"/>
            <Image HorizontalAlignment="Left"
                Height="30" 
                Margin="351,589,0,0" 
                VerticalAlignment="Top"
                Width="32" 
                Source="/Resources/Pictures/ICON-Colony.png" 
                Stretch="UniformToFill"/>
            <Button 
                x:Name="btnUpdateCustomer"
                Content="Modificar cliente" 
                HorizontalAlignment="Left" 
                Margin="340,811,0,0" 
                VerticalAlignment="Top"
                Height="54" 
                Width="228" 
                BorderBrush="#FFCC3824" 
                Visibility="Hidden"
                BorderThickness="4" Click="ModifyCustomer_Click"/>

        </Grid>

        <Grid x:Name="grdCustomerModule" Visibility="Visible">

            <Label Content="Encuentre al cliente utilizando su nombre" 
                HorizontalAlignment="Left" 
                Margin="47,102,0,0" 
                VerticalAlignment="Top" 
                FontFamily="Arial" 
                FontSize="18" 
                Foreground="#FFF8F8F8"/>

            <Rectangle 
                HorizontalAlignment="Center"
                Height="52" 
                Margin="0,139,0,0" 
                Stroke="#FF262222" 
                VerticalAlignment="Top" 
                Width="572" 
                Fill="#FF262222" 
                RadiusX="30" 
                RadiusY="30"/>

            <TextBox x:Name="txtProductSearch"
                HorizontalAlignment="Left" 
                Margin="100,143,0,0"
                TextWrapping="Wrap"
                VerticalAlignment="Top" 
                FontSize="30" 
                Width="481" 
                Height="45"
                Foreground="#FFECD9D9"
                BorderBrush="#FF262222" 
                Background="#FF262222"
                TextChanged="TextBox_CustomerSearch">
            </TextBox>

            <WrapPanel x:Name="wpCustomers" Margin="36,203,14,23"/>

            <Image
                HorizontalAlignment="Left"
                Height="34" 
                Margin="61,149,0,0" 
                VerticalAlignment="Top"
                Width="33" 
                Source="/Resources/Pictures/ICON-SearchCustomer.png"/>

            <Image
                HorizontalAlignment="Left"
                Height="42" 
                Margin="78,34,0,0" 
                VerticalAlignment="Top"
                Width="42" 
                Source="/Resources/Pictures/ICON-Back.png"
                MouseDown="Click_CloseCustomerModule"/>

        </Grid>

    </Grid>

</UserControl>
