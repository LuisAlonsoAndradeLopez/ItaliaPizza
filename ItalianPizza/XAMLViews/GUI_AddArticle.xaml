        <Rectangle HorizontalAlignment="Left" Height="880" Margin="256,0,0,0" Stroke="#FF1C1C1C" VerticalAlignment="Center" Width="1474" Fill="#FF18171C" RadiusX="20" RadiusY="20" Grid.ColumnSpan="2"/>

        <Grid x:Name="VirtualWindowConsultCustomerOrders" Margin="-2,0,2,0" Grid.ColumnSpan="2">
            <Rectangle HorizontalAlignment="Left" Height="707" Stretch="Uniform" Margin="277,39,0,0" VerticalAlignment="Top" Width="736" Fill="#000000" RadiusX="20" RadiusY="20"/>
            <TextBlock Name="SelectAnArticleTextBlock1" Text="Imágen del Artículo" Foreground="White" FontSize="50" Margin="427,62,876,772" TextAlignment="Center" TextWrapping="Wrap" Visibility="Visible"/>
            <Image Name="ArticleImage" Stretch="Uniform" Margin="277,136,758,291" />
            <Button Content="Seleccionar Imágen" HorizontalAlignment="Left" Margin="473,620,0,0" VerticalAlignment="Top" Height="66" Width="344" FontSize="25" Click="SelectImageButtonOnClick"/>

            <Label Content="Nombre del Artículo: " HorizontalAlignment="Left" Margin="1033,49,0,0" VerticalAlignment="Top" Foreground="White" FontSize="34" FontFamily="Arial"/>
            <TextBox Name="ArticleNameTextBox" HorizontalAlignment="Left" Margin="1033,103,0,0" Text="Ingrese nombre del artículo" VerticalAlignment="Top" Height="64" Width="363" FontSize="24" MaxLength="30"/>
            <Label Content="Tipo de Artículo: " HorizontalAlignment="Left" Margin="1423,49,0,0" VerticalAlignment="Top" Foreground="White" FontSize="34" FontFamily="Arial"/>
            <ComboBox Name="ArticleTypesComboBox" HorizontalAlignment="Left" Margin="1423,103,0,0" VerticalAlignment="Top" Height="64" Width="283" FontSize="24" SelectionChanged="ArticleTypesComboBoxSelectionChanged"/>
            <Label Content="Tipo de Insumo: " HorizontalAlignment="Left" Margin="1037,191,0,0" VerticalAlignment="Top" Foreground="White" FontSize="34" FontFamily="Arial"/>
            <ComboBox Name="IngredientOrProductTypesComboBox" HorizontalAlignment="Left" Margin="1033,245,0,0" VerticalAlignment="Top" Height="64" Width="359" FontSize="24" />
            <Label Content="Cantidad: " HorizontalAlignment="Left" Margin="1423,191,0,0" VerticalAlignment="Top" Foreground="White" FontSize="34" FontFamily="Arial"/>
            <xctk:IntegerUpDown Name="QuantityIntegerUpDown" Value="0" Increment="1" Maximum="100000" Minimum="0" HorizontalAlignment="Left" Margin="1423,245,0,0" VerticalAlignment="Top" Height="64" Width="283" FontSize="24"/>
            <Label Content="Código: " HorizontalAlignment="Left" Margin="1037,334,0,0" VerticalAlignment="Top" Foreground="White" FontSize="34" FontFamily="Arial"/>
            <TextBox Name="CodeTextBox" HorizontalAlignment="Left" Margin="1037,388,0,0" Text="Ingrese el código del artículo" VerticalAlignment="Top" Height="64" Width="359" FontSize="24" MaxLength="8"/>
            <Label Content="Precio: " HorizontalAlignment="Left" Margin="1423,334,0,0" VerticalAlignment="Top" Foreground="White" FontSize="34" FontFamily="Arial"/>
            <xctk:DecimalUpDown Name="PriceDecimalUpDown" Value="0" Increment="0.01" Maximum="100000" Minimum="0" HorizontalAlignment="Left" Margin="1423,388,0,0" VerticalAlignment="Top" Height="64" Width="283" FontSize="24"/>
            <Label Content="Descripción: " HorizontalAlignment="Left" Margin="1037,483,0,0" VerticalAlignment="Top" Foreground="White" FontSize="34" FontFamily="Arial"/>
            <TextBox Name="DescriptionTextBox" HorizontalAlignment="Left" Margin="1037,537,0,0" TextWrapping="Wrap" AcceptsReturn="True" Text="Ingrese la descripción del artículo" VerticalAlignment="Top" Height="194" Width="669" FontSize="24" MaxLength="75"/>
            <Button Content="Atrás" HorizontalAlignment="Left" Margin="507,788,0,0" VerticalAlignment="Top" Height="66" Width="280" FontSize="25" Click="BackButtonOnClick"/>
            <Button Content="Agregar Artículo" HorizontalAlignment="Left" Margin="1206,788,0,0" VerticalAlignment="Top" Height="66" Width="280" FontSize="25" Click="AddArticleButtonOnClick"/>
        </Grid>
    </Grid>
